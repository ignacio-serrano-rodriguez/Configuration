# debian based update (deb packages)
# alias deb_upd='sudo apt update -y && sudo apt upgrade -y && sudo apt autoremove -y && sudo apt autoclean -y' 

# fedora based update (rpm packages)
alias rpm_upd='echo "-- RPM --" && sudo dnf upgrade --refresh -y && sudo dnf autoremove -y' 

# flatpak update
alias flatpak_upd='echo "-- FLATPAK --" && sudo flatpak update -y && sudo flatpak uninstall --unused -y'

# snap update
alias snap_upd='echo "-- SNAP --" && sudo snap refresh && echo -e "\n"'

# update system
alias upd='echo -e "-- PACKAGES UPDATING STARTED --\n" && sudo echo ""; rpm_upd && echo -e "" && flatpak_upd && echo -e "\n-- PACKAGES UPDATING FINISHED --\n"'

# generic alias
alias c='clear'
alias l='ls -lart'
alias network_interfaces='ip -c a'
alias ip_public='curl ipinfo.io'
alias macs='inxi -Nn'
alias systeminfo='inxi -Fxxxrz'
alias hosts='nmap -sn'
alias their_open_ports='nmap'
alias logout='gnome-session-quit --logout'
alias root='sudo su'
alias os_version='lsb_release -a'
alias kernel_version='uname -r'
alias grub_config='sudo nano /etc/default/grub'
alias my_open_ports='sudo lsof -i -P -n | grep LISTEN && sudo netstat -tulpn | grep LISTEN && sudo ss -tulpn | grep LISTEN'
alias d='docker'
alias d_stop='systemctl --user stop docker-desktop'
alias d_start='systemctl --user start docker-desktop'
alias display_server='echo $XDG_SESSION_TYPE'