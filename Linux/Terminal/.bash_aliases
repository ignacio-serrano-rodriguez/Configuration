alias deb_upg='echo "-- DEB PACKAGES UPGRADING --" && sudo apt update -y && sudo apt upgrade -y && sudo apt autoremove -y && sudo apt autoclean -y' 
alias snap_upg='echo "-- SNAP PACKAGES UPGRADING --" && sudo snap refresh'
alias upg='sudo echo -e "\n-- PACKAGES UPGRADING STARTED --\n" && deb_upg && echo -e "" && snap_upg && echo -e "\n-- PACKAGES UPDATING FINISHED --\n"'
alias l='ls -lart'
alias c='clear'
alias mount_windows='sudo mount -t ntfs-3g /dev/nvme0n1p3 /mnt/windows'
alias unmount_windows='sudo umount /mnt/windows'
alias open_windows_folder='open /mnt/windows/'
alias activate_conda='source ~/miniconda3/bin/activate'
alias logout='gnome-session-quit --logout'
alias change_to_root='sudo su'
alias grub_config='sudo nano /etc/default/grub'
alias ip_public='curl ipinfo.io'
